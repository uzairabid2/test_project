<div class="z_fieldz z_100" id="receiver_location_fields">
  <%= fields_for :receiver_location do |ra| %>
      <%= ra.hidden_field :city %>
      <%= ra.hidden_field :state %>
      <%= ra.hidden_field :zip_code %>
      <%= ra.hidden_field :country %>
      <%= ra.hidden_field :nick_name, :value => "-------" %>
      <%= ra.hidden_field :user_id, :value => current_user.blank? ? "" : current_user.id %>
      <div class="z_100 fieldz">
        <div class="zd100 f-l fill_1-1">
          <%= ra.text_field :contact_person, :value => @recipient, :class => "z_100", :placeholder => "Recipient's Name" %>
        </div>
        <div class="zd100 f-r fill_1-3">
          <%= ra.text_field :address, :class => "z_100", :placeholder => "2211 California Ave, Monrovia, CA 91016", :onblur => "location_change();" %>
        </div>
      </div>
      <!--z_100 fieldz-->
      <div class="z_100 fieldz">

        <div class="zd100 f-l fill_1-1">
          <div class="contact_method">
            <%= ra.select :contact_method_type, options_for_select([["Phone", "1"], ["Email", "2"]]), {}, :class => "chosen-select_n", :style => "" %>
          </div>
        </div>
        <div class="zd100 f-r fill_1-3">
          <p id="phone_error"></p>
          <%= ra.text_field :contact_phone, :value => @phone, :class => "f-r z_100" %>
        </div>
        <div class="zd100 fill_1-0">
          <%= ra.text_field :comments, :value => @dest_comments, :class => "z_100", :placeholder => "Comments for Delivery (ring bell, third floor, etc." %>
        </div>

      </div>
      <!--z_100 fieldz-->
      <div class="z_100 check_field">
        <%= ra.check_box :is_active %>
        <p>Save to My Locations</p>
      </div>
  <% end %>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $(".chosen-select_n").chosen({disable_search: true});
    });
</script>