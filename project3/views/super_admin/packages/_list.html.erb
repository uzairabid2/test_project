<table class="table table-striped table-bordered table-hover" id="super_packages">
  <thead>
  <tr>
    <th>
      Name
    </th>
    <th>
      weight
    </th>
    <th>
      Description
    </th>
    <th>
      Amount
    </th>
    <th>
      Basic fee
    </th>
    <th>
      Cost per mile
    </th>
    <th>
      Min fare
    </th>
    <th>
      Action
    </th>
  </tr>
  </thead>
  <% unless @packages.blank? %>
      <tbody>
      <% @packages.each_with_index do |package, index| %>
          <tr class="odd gradeX">
            <td>
              <%= package.name %>
            </td>
            <td>
              <%= package.weight %>
            </td>
            <td>
              <%= package.description %>
            </td>
            <td>
              <%= number_to_currency(package.amount) %>
            </td>
            <td>
              <%= number_to_currency(package.basic_fee) %>
            </td>
            <td>
              <%= number_to_currency(package.cost_per_mile) %>
            </td>
            <td>
              <%= number_to_currency(package.min_fare) %>
            </td>
            <td>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Edit", edit_super_admin_package_path(package.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

              <%= link_to "View", super_admin_package_path(package.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

          </tr>
      <% end %>
      </tbody>
  <% end %>
</table>




