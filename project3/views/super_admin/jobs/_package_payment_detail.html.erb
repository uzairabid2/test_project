<% unless @job.transaction_history.blank? %>
    <% unless @job.transaction_history.payment_method.blank? %>
        <% payment_method = @job.transaction_history.payment_method %>
        <div class="portlet box blue">
          <div class="portlet-title">
            <div class="caption">
              <i class="fa fa-gift"></i>Payment Detail
            </div>
            <div class="tools">
              <a class="collapse" href="javascript:;">
              </a>
              <a class="config" data-toggle="modal" href="#portlet-config">
              </a>
              <a class="reload" href="javascript:;">
              </a>
              <a class="remove" href="javascript:;">
              </a>
            </div>
          </div>
          <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form role="form" class="form-horizontal">
              <div class="form-body">

                <h3 class="form-section">Card Holder</h3>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Address:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          <%= payment_method.billing_address.blank? ? "" : payment_method.billing_address.street_address %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Card Number:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          **** **** **** <%= payment_method.card_number %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Sub Total:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          $<%= "%.2f" % @job.amount %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Tax:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          $<%= "%.2f" % @job_tax %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Your Total:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          $<%= "%.2f" % (@job.amount + @job_tax) %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Package:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          # <%= @job.job_code %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label col-md-3">Status:</label>

                      <div class="col-md-9">
                        <p class="form-control-static">
                          <%= @job.get_status %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!--/span-->

                  <!--/span-->
                </div>

              </div>
            </form>
            <!-- END FORM-->
          </div>
        </div>
    <% end %>
<% end %>