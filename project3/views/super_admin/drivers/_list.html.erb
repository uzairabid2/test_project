<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box grey-cascade">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-globe"></i>Drivers Requests
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="#portlet-config" data-toggle="modal" class="config">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="driver_request">
          <thead>
          <tr>
            <th>
              Name
            </th>
            <th>
              Email
            </th>
            <th>
              Shipments
            </th>
            <th>
              Joined
            </th>
            <th>
              Action
            </th>
          </tr>
          </thead>
          <% unless @in_active_drivers.blank? %>
              <tbody>
              <% @in_active_drivers.each_with_index do |driver, index| %>
                  <tr class="odd gradeX">
                    <td>
                      <%= driver.full_name %>
                    </td>
                    <td>
                      <a href="mailto:shuxer@gmail.com">
                        <%= driver.email %> </a>
                    </td>
                    <td>
                      <%= driver.driver_jobs.size %>
                    </td>
                    <td class="center">
                      <%= driver.created_at.strftime("%m-%d-%y") %>
                    </td>
                    <td>
                      <a href="javascript:void(0)" style="text-decoration:none" onclick="confirm_driver(<%=driver.id%>)">
                      <span class="label label-sm label-success">
									Confirm </span>
                      </a>
                      <!--<a href="javascript:void(0)" style="text-decoration:none">-->
                      <!--<span class="icon fa fa-power-off user_status" status="0" user_id="129" id="user129"></span>-->
                      <!--</a>-->
                      &nbsp;&nbsp;&nbsp;
                      <%= link_to "Edit", edit_super_admin_driver_path(driver.id), :style => "text-decoration:none" %>
                      &nbsp;&nbsp;&nbsp;

                      <%= link_to "View", super_admin_driver_path(driver.id), :style => "text-decoration:none" %>
                    </td>
                    <!--<td>-->
                    <!--<span class="label label-sm label-success">-->
                    <!--Approved </span>-->
                    <!--</td>-->
                  </tr>
              <% end %>
              </tbody>
          <% end %>
        </table>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box grey-cascade">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-globe"></i>Active Drivers
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="#portlet-config" data-toggle="modal" class="config">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <div class="table-toolbar">
          <div class="btn-group">
            <%= link_to(new_super_admin_driver_path) do %>
                <button id="sample_editable_1_new" class="btn green">
                  Add New <i class="fa fa-plus"></i>
                </button>
            <% end %>
          </div>

        </div>
        <table class="table table-striped table-bordered table-hover" id="active_driver">
          <thead>
          <tr>
            <th>
              Name
            </th>
            <th>
              Email
            </th>
            <th>
              Shipments
            </th>
            <th>
              Joined
            </th>
            <th>
              Action
            </th>
          </tr>
          </thead>
          <% unless @active_drivers.blank? %>
              <tbody>
              <% @active_drivers.each_with_index do |driver, index| %>
                  <tr class="odd gradeX">
                    <td>
                      <%= driver.full_name %>
                    </td>
                    <td>
                      <a href="mailto:shuxer@gmail.com">
                        <%= driver.email %> </a>
                    </td>
                    <td>
                      <%= driver.driver_jobs.size %>
                    </td>
                    <td class="center">
                      <%= driver.created_at.strftime("%m-%d-%y") %>
                    </td>
                    <td>

                      <% if driver.status == "active" %>
                          <a href="javascript:void(0)" style="text-decoration:none" onclick="disable_user('<%=driver.id%>', 'active')">
                            <span class="icon fa fa-power-off user_status" id="user_<%= driver.id %>"></span>
                          </a>
                      <% else %>
                          <a href="javascript:void(0)" style="text-decoration:none" onclick="disable_user('<%=driver.id%>', 'inactive')">
                            <span class="icon fa user_status fa-rotate-right" id="user_<%= driver.id %>"></span>
                          </a>
                      <% end %>

                      &nbsp;&nbsp;&nbsp;
                      <%= link_to "Edit", edit_super_admin_driver_path(driver.id), :style => "text-decoration:none" %>
                      &nbsp;&nbsp;&nbsp;

                      <%= link_to "View", super_admin_driver_path(driver.id), :style => "text-decoration:none" %>
                    </td>
                    <!--<td>-->
                    <!--<span class="label label-sm label-success">-->
                    <!--Approved </span>-->
                    <!--</td>-->
                  </tr>
              <% end %>
              </tbody>
          <% end %>
        </table>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>